#!/bin/sh
if [ -z "$1" ] 
then
	echo "Usage: $0 <zvol size>"
	echo "For example: $0 50G"
	exit 1
fi
sudo /usr/sbin/zfs create -V $1 rpool/d && \
sudo /usr/sbin/lofiadm -c aes-256-cbc -a /dev/zvol/rdsk/rpool/d /dev/lofi/100 && \
sudo /usr/sbin/zpool create -o cachefile=none data /dev/lofi/100 && \
sudo /usr/gnu/bin/chmod -R a+w /data && \
sudo /usr/sbin/zfs create data/home

